<div class="container">

    <!-- Rating History Grid -->
    <div class="mb-4">
        <label class="form-label">Revision Rating History</label>
        <div id="rating-grid" class="d-flex flex-wrap gap-2 p-2 border rounded" style="max-width: 100%;">
            <div class="rating-square plus-square" id="plusBtn">+</div>
        </div>
    </div>

    <!-- Hidden Popup Form -->
    <div id="rating-popup" class="popup-form" style="display: none;">
        <label class="form-label mb-1">Date</label>
        <input type="date" class="form-control form-control-sm mb-2" id="rating-date">
        <label class="form-label mb-1">Rating (0â€“5)</label>
        <input type="number" min="0" max="5" class="form-control form-control-sm mb-2" id="rating-value">
        <button class="btn btn-sm btn-primary w-100" id="rating-save">Save</button>
    </div>

    <!-- Next Review Date -->
    <div class="mb-3">
        <label for="nextReview" class="form-label">Suggested Next Review Date</label>
        <input type="date" class="form-control" id="nextReview">
    </div>

    <!-- Next dashboard -->
    <div class="mb-3">
        <a href={{dashboardurl}}>Course Review Dashboard</a>
    </div>
</div>