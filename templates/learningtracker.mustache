<div class="container">

    <!-- Revision History -->
    <div class="mb-4">
        <label class="form-label">Revision History</label>
        <div id="rating-container" class="d-flex flex-wrap gap-2 position-relative">
            {{#ratings}}
            <button type="button" class="btn btn-success rounded-circle btn-xs rating-btn" data-rating="{{rating}}"
                data-date="{{date}}">
                {{rating}}
            </button>
            {{/ratings}}
            <button type="button" class="btn btn-success rounded-circle btn-xs rating-btn" data-rating="5"
                data-date="2025-06-25">5</button>
            <button type="button" class="btn btn-success rounded-circle btn-xs rating-btn" data-rating="4"
                data-date="2025-06-24">4</button>
            <button type="button" class="btn btn-success rounded-circle btn-xs rating-btn" data-rating="3"
                data-date="2025-06-23">3</button>

            <!-- Popup form will be injected here -->
            <div id="rating-popup" class="popup-form" style="display: none;">
                <label class="form-label mb-1">Date</label>
                <input type="date" class="form-control form-control-sm mb-2" id="rating-date">

                <label class="form-label mb-1">Rating</label>
                <input type="number" min="0" max="5" class="form-control form-control-sm mb-2" id="rating-value">

                <button class="btn btn-sm btn-primary w-100" id="rating-save">Save</button>
            </div>
        </div>
    </div>

    <!-- Learning Level Selector (Dropdown) -->
    <div class="mb-4">
        <label for="learninglevel" class="form-label">Learning Level</label>
        <select id="learninglevel" class="form-select form-select-sm">
            <option value="Not Started">Not Started</option>
            <option value="Fresh">Fresh</option>
            <option value="Learning">Learning</option>
            <option value="Expert">Expert</option>
            <option value="Done">Done</option>
        </select>
    </div>

    <!-- Compact Row with Revised, Target, and Progress -->
    <div class="row align-items-end g-3 mb-3">
        <div class="col-auto">
            <label for="revisioncount" class="form-label mb-0">Revised</label>
            <input type="number" class="form-control form-control-sm" id="revisioncount" min="0" value="0"
                style="width: 80px;">
        </div>

        <div class="col-auto">
            <label for="targetcount" class="form-label mb-0">Target</label>
            <input type="number" class="form-control form-control-sm" id="targetcount" min="1" value="5"
                style="width: 80px;">
        </div>

        <div class="col">
            <label class="form-label mb-0">Progress</label>
            <div class="progress">
                <div id="progressBar" class="progress-bar" role="progressbar" style="width: 0%;" aria-valuemin="0"
                    aria-valuemax="100">0%</div>
            </div>
        </div>
    </div>

    <!-- Next Review Date -->
    <div class="mb-3">
        <label for="nextReview" class="form-label">Suggested Next Review Date</label>
        <input type="date" class="form-control" id="nextReview">
    </div>

    <!-- Next dashboard -->
    <div class="mb-3">
        <a href={{dashboardurl}}>Course Review Dashboard</a>
    </div>
</div>